where

def I32: Type = #I32

def MAX: I32 = #I32.max
def MIN: I32 = #I32.min

def abs: ∀ (x: I32) -> #U32 = #I32.abs
def sgn: ∀ (x: I32) -> Bool = #I32.sgn

def eql: ∀ (x y: I32) -> Bool = #I32.eql
def lte: ∀ (x y: I32) -> Bool = #I32.lte
def lth: ∀ (x y: I32) -> Bool = #I32.lth
def gte: ∀ (x y: I32) -> Bool = #I32.gte
def gth: ∀ (x y: I32) -> Bool = #I32.gth
def and: ∀ (x y: I32) -> Bool = #I32.and
def xor: ∀ (x y: I32) -> Bool = #I32.xor
def or: ∀ (x y: I32) -> Bool = #I32.or
def neq (x y: I32): Bool = Bool.not (eql x y)

def add: ∀ (x y: I32) -> I32 = #I32.add

def SafeAdd (x y: I32): Bool =
  Bool.not
    (Bool.and
      (Bool.eql (sgn x) (sgn y))
      (Bool.neq (sgn x) (sgn (#I32.add x y)))
    )

def addSafe (x y: I32) (0 e: Is (SafeAdd x y)): I32 = #I32.add x y

def sub: ∀ (x y: I32) -> I32 = #I32.sub

def SafeSub (x y: I32): Bool =
  Bool.not
    (Bool.and
      (Bool.eql (sgn x) (Bool.not (sgn y)))
      (Bool.neq (sgn x) (sgn (#I32.sub x y)))
    )

def subSafe (x y: I32) (0 e: Is (lte y x)): I32 = #I32.sub x y

def mul: ∀ (x y: I32) -> I32 = #I32.mul

def SafeMul (x y: I32): Bool =
  Bool.or (eql x +0i32)
    ((case (eql y +0i32)) (λ _ => Bool)
       Bool.true
       (eql (#I32.div (#I32.mul x y) y) x)
    )

def mulSafe (x y: I32) (0 e: Is (SafeMul x y)): I32 = #I32.mul x y

def div (x y: I32): Maybe I32 =
  (case (neq y +0i32)) (λ _ => Maybe I32)
    (Maybe.some I32 (#I32.div x y))
    (Maybe.none I32)

def divSafe (x y: I32) (0 e: Is (neq y +0i32)): I32 = #I32.div x y

def mod (x y: I32): Maybe I32 =
  (case (neq y +0i32)) (λ _ => Maybe I32)
    (Maybe.some I32 (#I32.mod x y))
    (Maybe.none I32)

def modSafe (x y: I32) (0 e: Is (neq y +0i8)): I32 = #I32.mod x y

def pow: ∀ (x: I32) (y: U32) -> I32 = #I32.pow
def shl: ∀ (x: U32) (y: I32) -> I32 = #I32.shl
def shr: ∀ (x: U32) (y: I32) -> I32 = #I32.shr
def rol: ∀ (x: U32) (y: I32) -> I32 = #I32.rol
def ror: ∀ (x: U32) (y: I32) -> I32 = #I32.ror

def countZeros: ∀ (x: I32) -> U32 = #I32.count_zeros
def countOnes: ∀ (x: I32) -> U32 = #I32.count_ones

def SafeToU8 (x: I32): Bool = Bool.and (sgn x) (lte x (#U8.to_I32 #U8.max))

def toU8 (x: I32): Maybe #U8 =
  (case (SafeToU8 x)) (λ _ => Maybe #U8)
    (Maybe.some #U8 (#I32.to_U8 x))
    (Maybe.none #U8)

def toU8Safe (x: I32) (0 e: Is (SafeToU8 x)): #U8 = #I32.to_U8 x

def SafeToU16 (x: I32): Bool = Bool.and (sgn x) (lte x (#U16.to_I32 #U16.max))

def toU16 (x: I32): Maybe #U16 =
  (case (SafeToU16 x)) (λ _ => Maybe #U16)
    (Maybe.some #U16 (#I32.to_U16 x))
    (Maybe.none #U16)

def toU16Safe (x: I32) (0 e: Is (SafeToU16 x)): #U16 = #I32.to_U16 x


def toU32 (x: I32): Maybe #U32 =
  (case (sgn x)) (λ _ => Maybe #U32)
    (Maybe.some #U32 (#I32.to_U32 x))
    (Maybe.none #U32)

def toU32Safe (x: I32) (0 e: Is (sgn x)): #U32 = #I32.to_U32 x

def toU64 (x: I32): Maybe #U64 =
  (case (sgn x)) (λ _ => Maybe #U64)
    (Maybe.some #U64 (#I32.to_U64 x))
    (Maybe.none #U64)

def toU64Safe (x: I32) (0 e: Is (sgn x)): #U64 = #I32.to_U64 x

def toNat (x: I32): Maybe #Nat =
  (case (sgn x)) (λ _ => Maybe #Nat)
    (Maybe.some #Nat (#I32.to_Nat x))
    (Maybe.none #Nat)

def toNatSafe (x: I32) (0 e: Is (sgn x)): #Nat = #I32.to_Nat x

def SafeToI8 (x: I32): Bool =
  Bool.or (gte x (#I8.to_I32 #I8.min)) (lte x (#I8.to_I32 #I8.max))

def toI8 (x: I32): Maybe #I8 =
  (case (SafeToI8 x)) (λ _ => Maybe #I8)
    (Maybe.some #I8 (#I32.to_I8 x))
    (Maybe.none #I8)

def toI8Safe (x: I32) (0 e: Is (SafeToI8 x)): #I8 = #I32.to_I8 x

def SafeToI16 (x: I32): Bool =
  Bool.or (gte x (#I16.to_I32 #I16.min)) (lte x (#I16.to_I32 #I16.max))

def toI16 (x: I32): Maybe #I16 =
  (case (SafeToI16 x)) (λ _ => Maybe #I16)
    (Maybe.some #I16 (#I32.to_I16 x))
    (Maybe.none #I16)

def toI16Safe (x: I32) (0 e: Is (SafeToI16 x)): #I16 = #I32.to_I16 x

def toI64: ∀ (x: I32) -> #I64 = #I32.to_I64
def toInt: ∀ (x: I32) -> #Int = #I32.to_Int
