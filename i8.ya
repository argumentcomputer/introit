def toU32Safe (x: I8) (0 e: Is (sgn x)): #U32 = #I8.to_U32 x

def toU64 (x: I8): Maybe #U64 =
  (case (sgn x)) (λ _ => Maybe #U64)
    (Maybe.some #U64 (#I8.to_U64 x))
    (Maybe.none #U64)

def toU64Safe (x: I8) (0 e: Is (sgn x)): #U64 = #I8.to_U64 x

def toNat (x: I8): Maybe #Nat =
  (case (sgn x)) (λ _ => Maybe #Nat)
    (Maybe.some #Nat (#I8.to_Nat x))
    (Maybe.none #Nat)

def toNatSafe (x: I8) (0 e: Is (sgn x)): #Nat = #I8.to_Nat x

def toI16: ∀ (x: I8) -> #I16 = #I8.to_I16
def toI32: ∀ (x: I8) -> #I32 = #I8.to_I32
def toI64: ∀ (x: I8) -> #I64 = #I8.to_I64
def toInt: ∀ (x: I8) -> #Int = #I8.to_Int
